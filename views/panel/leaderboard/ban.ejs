    <h1>Бан в лидербордах</h1>
    Игроки, забаненые в лидербордах не будут отображаться в топе.
    <br><br>
    <label>Никнейм для бана</label>
    <br>
    <input type="text" name="username" placeholder="Никнейм для бана">
    <br><br>
    <button id="ban">Забанить</button>
    <button id="unban">Разбанить</button> 
    <div id="result"></div>
    <br><br>
    <button id="back">Назад</button>
    
    <script>
    $(document).ready(function() {
        $('#ban').click(function(e) {
            $('#ban').prop('disabled', true);
            $('#unban').prop('disabled', true);
            $('#back').prop('disabled', true);
            const username = $('input[name="username"]').val();
            const params = { userName: username };
            
            async function banUser(username) {
                const res = await sendPost('<%= GDPSID %>/panel/leaderboard/ban', params);
                if (res == "1") {
                    $('#result').html(`<br><br>Игрок ${params.userName} забанен в лидербордах`);
                    $('#ban').prop('disabled', false);
                    $('#unban').prop('disabled', false);
                    $('#back').prop('disabled', false);
                } else if (res == "-1") {
                    $('#result').html(`<br><br><font color="#cc0000">Игрок ${params.userName} не найден</font>`);
                    $('#ban').prop('disabled', false);
                    $('#unban').prop('disabled', false);
                    $('#back').prop('disabled', false);
                } else if (res == "-2") {
                    $('#result').html(`<br><br><font color="#cc0000">Ошибка БД. Попробуйте позже</font>`);
                    $('#ban').prop('disabled', false);
                    $('#unban').prop('disabled', false);
                    $('#back').prop('disabled', false);
                } else {
                    $('#result').html(`<br><br><font color="#cc0000">Системная ошибка: ${res}</font>`);
                    $('#ban').prop('disabled', false);
                    $('#unban').prop('disabled', false);
                    $('#back').prop('disabled', false);
                }
            }
            banUser(params);
        });
        
            $('#unban').click(function(e) {
                $('#ban').prop('disabled', true);
                $('#unban').prop('disabled', true);
                $('#back').prop('disabled', true);
                const username = $('input[name="username"]').val();
                const params = { userName: username };
                async function unbanUser(username) {
                    const res = await sendPost('<%= GDPSID %>/panel/leaderboard/unban', params);
                    if (res == "1") {
                        $('#result').html(`<br><br>Игрок ${params.userName} разбанен в лидербордах`);
                        $('#ban').prop('disabled', false);
                        $('#unban').prop('disabled', false);
                        $('#back').prop('disabled', false);
                    } else if (res == "-1") {
                        $('#result').html(`<br><br><font color="#cc0000">Игрок ${params.userName} не найден</font>`);
                        $('#ban').prop('disabled', false);
                        $('#unban').prop('disabled', false);
                        $('#back').prop('disabled', false);
                    } else if (res == "-2") {
                        $('#result').html(`<br><br><font color="#cc0000">Ошибка БД. Попробуйте позже</font>`);
                        $('#ban').prop('disabled', false);
                        $('#unban').prop('disabled', false);
                        $('#back').prop('disabled', false);
                    } else {
                        $('#result').html(`<br><br><font color="#cc0000">Системная ошибка: ${res}</font>`);
                        $('#ban').prop('disabled', false);
                        $('#unban').prop('disabled', false);
                        $('#back').prop('disabled', false);
                    }
                }
            unbanUser(params);
        });
        
        $('#back').click(function() {
            $('#ban').prop('disabled', true);
            $('#unban').prop('disabled', true);
            $('#back').prop('disabled', true);
			swup.navigate('<%= GDPSID %>/panel');
            $('#ban').prop('disabled', false);
            $('#unban').prop('disabled', false);
            $('#back').prop('disabled', false);
        }); 
    });
