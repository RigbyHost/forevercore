# ForeverCore GDPS Environment Configuration
# Copy this file to .env and fill in your values

# ===== SERVER CONFIGURATION =====
PORT=3010
NODE_ENV=development
SERVER_URL=http://localhost:3010

# ===== DATABASE CONFIGURATION =====
DB_HOST=localhost
DB_PORT=3306
DB_USER=gdps
DB_PASSWORD=your_database_password
DB_NAME=gdps
DB_CONNECTION_LIMIT=10

# ===== REDIS CONFIGURATION =====
REDIS_ENABLED=false
REDIS_HOST=localhost
REDIS_PORT=6379
# REDIS_PASSWORD=your_redis_password
REDIS_DATABASE=0

# ===== SECURITY =====
JWT_SECRET=your_jwt_secret_here_should_be_at_least_32_characters_long
ENCRYPTION_KEY=your_encryption_key_here_should_be_at_least_32_characters_long
# CAPTCHA_SECRET=your_captcha_secret

# ===== EXTERNAL SERVICES =====
# YOUTUBE_API_KEY=your_youtube_api_key
# AWS_ACCESS_KEY_ID=your_aws_access_key
# AWS_SECRET_ACCESS_KEY=your_aws_secret_key
# AWS_REGION=us-east-1
# AWS_S3_BUCKET=your_s3_bucket

# ===== GDPS SPECIFIC =====
GDPS_NAME="ForeverCore GDPS"
GDPS_ID=main
ADMIN_EMAIL=admin@gdps.local
DEFAULT_ADMIN_USERNAME=admin
DEFAULT_ADMIN_PASSWORD=admin123

# ===== FEATURES =====
ENABLE_REGISTRATION=true
ENABLE_LEVEL_UPLOADS=true
ENABLE_COMMENTS=true
ENABLE_MUSIC_UPLOADS=true

# ===== LOGGING =====
LOG_LEVEL=info
LOG_TO_FILE=true

# ===== PERFORMANCE =====
MAX_UPLOAD_SIZE=50mb
REQUEST_TIMEOUT=30000
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX_REQUESTS=100